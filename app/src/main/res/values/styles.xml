<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@style/ActivityJumpAnimTheme</item>
    </style>

    <style name="ActivityJumpAnimTheme" parent="@android:style/Animation.Activity">
        <!-- 打开第二个Activity，第二个Activity的进入动画 -->
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <!-- 打开第二个Activity，第一个Activity的退出动画 -->
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <!-- 结束第二个Activity，第一个Activity的进入动画 -->
        <item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>
        <!-- 结束第二个Activity，第二个Activity的退出动画 -->
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>

    <style name="StartTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/md_black_1000</item>
        <item name="android:windowBackground">@color/md_white_1000</item>
        <item name="android:windowAnimationStyle">@style/StartJumpAnimTheme</item>
    </style>

    <style name="StartJumpAnimTheme" parent="@android:style/Animation.Activity">
        <!-- 打开第二个Activity，第一个Activity的退出动画 -->
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
    </style>

    <style name="ExpandedTitleTextAppearance"
        parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="CollapsingToolbarTitleStyle"
        parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>


    <!-- theme 改这个，popupTheme 去掉 即可改图标颜色 -->
    <style name="ThemeToolbar" parent="ThemeOverlay.AppCompat.Light">

        <!--&lt;!&ndash; navigation icon color &ndash;&gt;-->
        <!--<item name="colorControlNormal">@color/md_green_500</item>-->

        <!--&lt;!&ndash; color of the menu overflow icon &ndash;&gt;-->
